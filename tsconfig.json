{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "sourceMap": true,

    "rootDir": "src",
    "outDir": "bld"
  },
  "exclude": [
    "bld",
    "node_modules"
  ]
}
