{
  "name": "biu",
  "version": "0.2.18",
  "description": "The command-line task hub.",
  "bin": {
    "biu": "bld/cli/cli.js"
  },
  "scripts": {
    "lint-cli": "tslint -c src/cli/tslint.json -p src/cli/tsconfig.json",
    "lint-client": "tslint -c src/client/tslint.json -p src/cli/tsconfig.json",
    "lint": "yarn lint-cli && yarn lint-client",
    "build-cli": "yarn lint-cli && rimraf bld/cli && tsc -p src/cli/tsconfig.json",
    "build-client": "yarn lint-client && rimraf bld/client && parcel build src/client/index.html --out-dir bld/client",
    "build": "yarn build-cli && yarn build-client",
    "start-cli": "node bld/cli/cli.js",
    "start-cli-dev": "nodemon",
    "start-client": "parcel serve src/client/index.html --port 8089 --out-dir bld/client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vilic/biu.git"
  },
  "keywords": [
    "command-line",
    "command",
    "cli",
    "multiple",
    "hub"
  ],
  "author": "vilicvane",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vilic/biu/issues"
  },
  "homepage": "https://github.com/vilic/biu#readme",
  "files": [
    "bld/cli/**/*.js",
    "bld/client/**"
  ],
  "dependencies": {
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "ansi-to-html": "^0.6.6",
    "chalk": "^2.4.1",
    "chokidar": "^2.0.4",
    "clime": "^0.5.9",
    "express": "^4.16.3",
    "npm-which": "^3.0.1",
    "open": "0.0.5",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "shell-escape": "^0.2.0",
    "socket.io": "^2.1.1",
    "source-map-support": "^0.5.6",
    "strip-color": "^0.1.0",
    "tslib": "^1.9.3",
    "villa": "^0.3.1"
  },
  "devDependencies": {
    "@magicspace/configs": "^0.1.29",
    "@types/chalk": "^2.2.0",
    "@types/chokidar": "^1.7.5",
    "@types/express": "^4.16.0",
    "@types/node": "^10.5.7",
    "@types/socket.io": "^1.4.36",
    "nodemon": "^1.18.4",
    "parcel-bundler": "^1.9.7",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.0.1"
  }
}
